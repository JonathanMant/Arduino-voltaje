<Window x:Class="BorderRadius.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BorderRadius"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Border Background="DarkSalmon" BorderBrush="Silver" BorderThickness="1,2,3,5" CornerRadius="8,8,3,3">
        <StackPanel Margin="10">
            <Button Click="Button_Click">Button 1</Button>
            <Button Margin="0,10" Click="Button_Click_1">Button 2</Button>
            <Button>Button 3</Button>
            <Label Name="label1" Margin="20" Width="20" Height="50"></Label>

            <ComboBox>
                <ComboBoxItem>ComboBox Item #1</ComboBoxItem>
                <ComboBoxItem IsSelected="True">ComboBox Item #2</ComboBoxItem>
                <ComboBoxItem>ComboBox Item #3</ComboBoxItem>
                
                
                
            </ComboBox>
        </StackPanel>
        
        
        
        
        
    </Border>
        
</Window>
